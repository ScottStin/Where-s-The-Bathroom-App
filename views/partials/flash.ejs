<% if(success && success.length){ %> 
    <div class = "alert alert-success alert-dismissible fade show" role = "alert">
        <%=success%> 
        <button type="button" class = "btn-close" data-bs-dismiss = "alert" aria-label = "Close">
            <span aria-hidden="true"></span>
        </button>
    </div>
<% } %> 

